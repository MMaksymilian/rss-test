<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    >
  <LinearLayout android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_weight="1">
    <EditText android:id="@+id/rss_edit_text"
              android:layout_height="50dp"
              android:layout_width="0dp"
              android:layout_weight="5"/>
    <Button android:id="@+id/rss_button"
            android:layout_width="0dp" android:layout_height="50dp"
            android:layout_weight="3"
            android:text="@string/checkRSS" android:onClick="callRSS"/>
  </LinearLayout>

  <ScrollView android:id="@+id/scrollRSS"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"/>
</LinearLayout>

